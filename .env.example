# =============================================================================
# Environment Configuration for ScenarioBuilder
# =============================================================================
# Copy this file to .env and adjust values for your environment

# -----------------------------------------------------------------------------
# Flask API Configuration
# -----------------------------------------------------------------------------
FLASK_ENV=development
SECRET_KEY=change-me-in-production

# Server binding
API_HOST=0.0.0.0
API_PORT=8000

# -----------------------------------------------------------------------------
# Gradio UI Configuration
# -----------------------------------------------------------------------------
UI_HOST=0.0.0.0
UI_PORT=7860

# API connection (use Docker service name in containers, localhost for local dev)
API_BASE_URL=http://localhost:8000

# -----------------------------------------------------------------------------
# PostgreSQL Database
# -----------------------------------------------------------------------------
POSTGRES_DB=scenario
POSTGRES_USER=scenario
POSTGRES_PASSWORD=scenario
POSTGRES_PORT=5432

# Connection string (for Docker: use 'db' as hostname, for local: 'localhost')
DATABASE_URL=postgresql://scenario:scenario@localhost:5432/scenario

# -----------------------------------------------------------------------------
# Application Defaults
# -----------------------------------------------------------------------------
DEFAULT_ACTOR_ID=demo-user
